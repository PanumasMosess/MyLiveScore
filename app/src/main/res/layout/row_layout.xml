<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp">


    <TextView
        android:id="@+id/textStatus"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Status"
        android:textColor="#05f651"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/texthomeTeamName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textawayTeamName"
        android:layout_alignBottom="@+id/textawayTeamName"
        android:layout_toEndOf="@+id/textStatus"
        android:gravity="center"
        android:text="HomeName"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textawayTeamName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textStatus"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:text="AwayName"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textHomeTeamGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textStatus"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/textStatus"
        android:text="GoalHome"
        android:textColor="#f50505"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textAwayTeamGoal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="13dp"
        android:text="GoalAway"
        android:textColor="#f50505"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textHomeTeamGoal"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/textawayTeamName"
        android:text="VS" />


</RelativeLayout>
