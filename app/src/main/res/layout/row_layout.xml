<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/textStatus"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Status"
        android:textColor="#05f651"
        android:textSize="16dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/texthomeTeamName"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_above="@+id/textView"
            android:layout_marginEnd="13dp"
            android:layout_toStartOf="@+id/textView"
            android:gravity="center"
            android:text="HomeName"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textawayTeamName"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_above="@+id/textView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:gravity="center"
            android:text="AwayName"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textHomeTeamGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textAwayTeamGoal"
            android:layout_alignBottom="@+id/textAwayTeamGoal"
            android:layout_alignEnd="@+id/texthomeTeamName"
            android:text="GoalHome"
            android:textColor="#f50505"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textAwayTeamGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textawayTeamName"
            android:text="GoalAway"
            android:textColor="#f50505"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@+id/textAwayTeamGoal"
            android:layout_centerHorizontal="true"
            android:text="VS" />
    </RelativeLayout>

</RelativeLayout>
